modules = ["web", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libev", "libxcrypt", "pkg-config", "xcodebuild", "xsimd", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Deltatrade App"

[[workflows.workflow]]
name = "Deltatrade App"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash /tmp/start_deltatrade.sh"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 34419
externalPort = 3001

[[ports]]
localPort = 45555
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "python scheduler.py & exec gunicorn -k gevent --bind=0.0.0.0:5000 --reuse-port webapp:app"]
